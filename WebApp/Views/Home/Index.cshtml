@model OpenCat.Models.User

@section scripts {
    @if (Model != null)
    {
        <script type="text/javascript">
            App.User = Ember.Controller.extend({
                name: '@Model.name',
                email: '@Model.email',
                gravatar: '@Model.gravatar',

                largeGravatar: function () {
                    return 'http://www.gravatar.com/avatar/%@@?s=200'.fmt(this.get('gravatar'));
                }.property('gravatar')
            });
        </script>
    } else {
        <script type="text/javascript">
            App.User = Ember.Controller.extend({});
        </script>
    }
}