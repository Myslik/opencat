<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>OpenCAT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container navbar-wrapper">
        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="/">OpenCAT</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active"><a href="/"><i class="icon-upload"></i> Upload</a></li>
                        <li><a href="/editor"><i class="icon-edit"></i> Editor</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <div class="footer" style="text-align: center; color: #ccc;">
            Written by Premysl Krajcovic
        </div>
    </div>

    <!-- jQuery -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        window.jQuery || document.write('<script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")"><\/script>')
    </script>

    @Scripts.Render("~/bundles/libraries")
    @RenderSection("scripts", required: false)
</body>
</html>
